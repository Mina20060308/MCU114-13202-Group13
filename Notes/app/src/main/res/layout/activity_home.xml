<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 標題 -->
    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提醒事項"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 左上：今 -->
    <Button
        android:id="@+id/btnToday"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="今日事項"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="@null"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAll"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <!-- 右上：全 -->
    <Button
        android:id="@+id/btnAll"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="全部事項"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="@null"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHomeTitle"
        app:layout_constraintStart_toEndOf="@id/btnToday"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 中間：已 -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:text="已完成事項"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="@null"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnToday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 左下角：新增事項（文字） -->
    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增事項"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewAddUnderline" />

    <!-- 新增事項底下那條線（往上移） -->
    <View
        android:id="@+id/viewAddUnderline"
        android:layout_width="90dp"
        android:layout_height="6dp"
        android:background="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>