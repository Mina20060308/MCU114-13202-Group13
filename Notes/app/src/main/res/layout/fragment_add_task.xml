<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAddTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增事項"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnToTodayFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="新增到今日事項"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddTaskTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnToAllTasksFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="新增到全部事項"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnToTodayFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>