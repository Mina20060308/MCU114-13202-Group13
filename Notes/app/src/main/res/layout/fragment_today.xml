<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 新增任務區 -->
    <LinearLayout
        android:id="@+id/layoutAddTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <CheckBox
            android:id="@+id/cbNewTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <EditText
                android:id="@+id/etNewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="輸入任務內容" />

            <!-- 時間選擇欄位 -->
            <EditText
                android:id="@+id/etTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="選擇提醒時間"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/edit_text"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增" />
    </LinearLayout>

    <!-- ScrollView 顯示任務區 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutAddTask"
        app:layout_constraintBottom_toTopOf="@id/tvAddTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 早上 -->
            <TextView
                android:text="早上"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/inputMorning"
                android:hint="輸入提醒事項..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/morningEmpty"
                android:text="沒有提醒事項"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />

            <!-- 下午 -->
            <TextView
                android:text="中午"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp" />

            <EditText
                android:id="@+id/inputAfternoon"
                android:hint="輸入提醒事項..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/afternoonEmpty"
                android:text="沒有提醒事項"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />

            <!-- 晚上 -->
            <TextView
                android:text="晚上"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp" />

            <EditText
                android:id="@+id/inputNight"
                android:hint="輸入提醒事項..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/nightEmpty"
                android:text="沒有提醒事項"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />

            <!-- RecyclerView 顯示新增任務 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTodayTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 新增提醒事項按鈕 -->
    <LinearLayout
        android:id="@+id/tvAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="+"
            android:textSize="28sp"
            android:textColor="#007AFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text=" 新增提醒事項"
            android:textSize="18sp"
            android:textColor="#007AFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
